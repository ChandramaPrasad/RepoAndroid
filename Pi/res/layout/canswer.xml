<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/answerback"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/multi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/searchLayout"
            android:background="@drawable/searchedit"
            android:hint=" Search here.."
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="@dimen/title_text_size" />

        <RelativeLayout
            android:id="@+id/searchLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/searchbutton" >

            <ImageView
                android:id="@+id/searchButtonImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/searchicon"
                android:focusable="true" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/txtEmojicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/multi"
        android:layout_centerHorizontal="true"
        android:text="Compose answer"
        android:textColor="@color/black"
        android:textSize="@dimen/compose_answer_title_text_size" />

    <RelativeLayout
        android:id="@+id/relativeLayout26"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEmojicon"
        android:layout_centerHorizontal="true"
        android:background="#FFFF00" >

        <TextView
            android:id="@+id/questionFromAnswerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user"
            android:layout_toRightOf="@+id/textView2"
            android:paddingLeft="5dp"
            android:text="Question"
            android:textColor="@color/black"
            android:textSize="@dimen/compose_answer_question_text_size" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/TextView01"
            android:layout_marginLeft="10dp"
            android:text="Q:"
            android:textColor="@color/black"
            android:textSize="@dimen/compose_answer_q_text_size"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rcvb"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout26"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp" >

        <EditText
            android:id="@+id/enterEditText"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:focusable="true"
            android:gravity="top|left"
            android:hint="Give your answer"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/compose_answer_give_your_answer_text_size" />

        <requestFocus />
    </RelativeLayout>

    <TextView
        android:id="@+id/tfal"
        android:layout_width="1dp"
        android:layout_height="1dp" />

    <RelativeLayout
        android:id="@+id/option"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp" >

        <EditText
            android:id="@+id/suggestKeyowrd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:hint="Suggest Keyword"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textCursorDrawable="@null" />

        <!-- <TextView -->
        <!-- android:id="@+id/keys" -->
        <!-- android:layout_width="wrap_content" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:layout_marginLeft="15dp" -->
        <!-- android:layout_toRightOf="@+id/suggestKeyowrd" -->
        <!-- android:text="?" -->
        <!-- android:textColor="#DF0101" -->
        <!-- android:textSize="15dp" /> -->

        <ImageView
            android:id="@+id/post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="13dp"
            android:background="@drawable/post" />

        <ImageView
            android:id="@+id/keyword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/post"
            android:layout_marginLeft="20dp"
            android:background="@drawable/key"
            android:scaleType="fitXY" />
    </RelativeLayout>

    <TextView
        android:id="@+id/cft"
        android:layout_width="0.5dp"
        android:layout_height="0.5dp" />

</RelativeLayout>