<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hid"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    <TextView
        android:id="@+id/textView56"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout19"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:text="Hide/Suspend"
        android:textColor="#000000"
        android:textSize="@dimen/all_title_text_size" />

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="wrap_content"
        android:layout_height="0.8dp"
        android:layout_alignEnd="@+id/textView56"
        android:layout_alignLeft="@+id/textView56"
        android:layout_alignRight="@+id/textView56"
        android:layout_alignStart="@+id/textView56"
        android:layout_below="@+id/textView56"
        android:background="#000000" >
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/relativeLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="22dp"
            android:text="Hide /Suspend Account" />

        <CheckBox
            android:id="@+id/radioButton1"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/textView1"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/images_selector"
            android:button="@android:color/transparent"
            android:textColor="@android:color/transparent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/radioButton1"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/radioButton1"
            android:text="Hide " />

        <CheckBox
            android:id="@+id/radioButton2"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_below="@+id/radioButton1"
            android:layout_marginTop="18dp"
            android:layout_toLeftOf="@+id/textView2"
            android:background="@drawable/images_selector"
            android:button="@android:color/transparent"
            android:textColor="@android:color/transparent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/radioButton2"
            android:layout_alignBottom="@+id/radioButton2"
            android:layout_alignLeft="@+id/textView2"
            android:text="Suspend" />

        <ImageView
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/radioButton2"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="33dp"
            android:background="@drawable/submit" />
    </RelativeLayout>

</RelativeLayout>